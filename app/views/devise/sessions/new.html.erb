<div class="prepend-top push-2 span-20 last" id="login">
  <div class="prepend-top push-10 span-10 last">
    <div class="prepend-top prepend-2 span-8 last">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="field"><%= f.label :email %><br />
          <%= f.email_field :email, :size => 20 %>
        </div>

        <div class="field"><%= f.label :password, 'Contraseña' %><br />
          <%= f.password_field :password, :size => 20 %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me, '¿Recordarme?' %></div>
        <% end -%>

        <div><%= f.submit "Iniciar sesión" %></div>
      <% end %>

      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>

