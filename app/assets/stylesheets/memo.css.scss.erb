div#login{
  height: 250px;
  background: url(<%= 'inicio/fondo.png' %>)
}

div#cabecera{
  height: 50px;
  background: url(<%= asset_path 'chat/cabecera.png' %>) no-repeat;
  color: #ffffff;
}

div#usuario{
  margin-top: 10px;
}

div#add_contact{
  margin-top: 27px;
}

div#mail{
  margin-top: 29px;
}

div#menu{
  margin-top: 32px;
}

#menu-horizontal{
  padding: 0;
  list-style-type: none;
}

#menu-horizontal ul{
  display: none;
  left:-20px;
  position: absolute;
}

#menu-horizontal li:hover > ul{
  display:block;
}

#menu-horizontal li >ul > li > ul{
  position:absolute;
  left:85px;
  top:5px;
  display:none;
}

#menu-horizontal li{
  font-family: Arial;  
  font-size:10px; 
  color: black; 
  float: left;
  background: url(<%= asset_path 'chat/boton-menu.png' %>) no-repeat;
  position: relative;
  width:50;
  padding-left: 12px;
  padding-right: 12px;
  padding-bottom: 3px;
  padding-top: 2px;
}

.curved {
  -moz-border-radius: 15px;
  -webkit-border-radius: 15px;
  behavior:url(border-radius.htc);
}

#menu-horizontal li ul li{
  font-size:10px; 
  display: block;
  float: none;
  position: relative;
  color: #fff;
  padding: 0px 0px 0px 5px;
  line-height: 30px;
  width:95px;
  background: #cac99e;
  z-index:10;
}

div#barra{
  height: 6px;
  background: url(<%= asset_path 'chat/barra.png' %>) no-repeat;
  margin: 1px 0px;
}

div#principal{
  height: 415px;
  background: url(<%= asset_path 'chat/fondo.png' %>) no-repeat;
}

div#player{
  height: 163px;
  background: #c3d2de;
}

div#emoticon{
  margin: 10px;
}

div#chat{
  height: 250px;;
  background-color:#ffffff;
  overflow:auto;
  border: 1px solid #808080;
  padding: 5px 10px;
}

div#mensaje input.texto{
  width: 270px; 
  border: 1px solid #808080;
}

.alinn{
padding-top: 5px;
}

div#mensaje button{
  height:40px;
  width:45px;
  padding-top: 0px;
  margin-top: 0px;
  background: url(<%= asset_path 'chat/enviar.png' %>) no-repeat;
}

div#contactos{
  background: white;
  opacity: .65;
  filter: alpha(opacity=65);
}


div#lista-contactos{
  background: #eeeeee;
}

div#lista-contactos ul{
  list-style-image: url(<%= asset_path 'chat/vinieta.png' %>)
}
