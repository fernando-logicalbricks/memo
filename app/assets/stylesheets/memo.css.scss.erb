div#login{
  height: 250px;
  background: url(<%= 'inicio/fondo.png' %>)
}

div#cabecera{
  height: 50px;
  background: url(<%= asset_path 'chat/cabecera.png' %>) no-repeat;
  color: #ffffff;
}

div#usuario{
  margin-top: 10px;
}

div#add_contact{
  margin-top: 27px;
}

div#mail{
  margin-top: 29px;
}

div#menu{
  margin-top: 20px;
}

#menu-horizontal{
  padding: 0;
  list-style-type: none;
}

#menu-horizontal ul{
  display: none;
  left:-14px;
  position: absolute;
}

#menu-horizontal li:hover > ul{
  display:block;
}

#menu-horizontal li >ul > li > ul{
  position:absolute;
  left:85px;
  top:-3px;
  display:none;
}

.galeria_avatares {
  position:absolute;
  display: inline-block;
  left:100px;
  top: 0px;  
  background: url(<%= asset_path 'chat/fondo-skins.png' %>) repeat;
  width: 100px;
  height: 110px;
  padding-top:10px;
  padding-left:10px;
  padding-right:0px;
  padding-bottom:10px;
}

.skin{
  height: 30px;
  width: 33px;
  float:left;
}

.skin a{
  position:relative;
  display:block;
  background: url(<%= asset_path 'chat/skin.png' %>) no-repeat;
  padding: 10px 10px;
  width: 24px;
  height : 24px;
  overflow:hidden;
}

#menu-horizontal li{
  font-family: Arial;  
  font-size:10px; 
  color: black; 
  float: left;
  background: url(<%= asset_path 'chat/boton-menu.png' %>) no-repeat;
  position: relative;
  width:50;
  padding-left: 12px;
  padding-right: 12px;
  padding-bottom: 7px;
  padding-top: 7px;
}

.curved {
  -moz-border-radius-topleft: 15px;
  -moz-border-radius-topright: 15px;
  behavior:url(border-radius.htc);
}

#menu-horizontal li ul li{
  font-size:10px; 
  display: block;
  float: none;
  position: relative;
  top:7px;
  color: black;
  padding: 0px 0px 0px 5px;
  line-height: 30px;
  width:95px;
  background: url(<%= asset_path 'chat/fondo-submenu.png' %>) repeat;
  z-index:10;
}



div#barra{
  height: 6px;
  background: url(<%= asset_path 'chat/barra.png' %>) no-repeat;
  margin: 1px 0px;
}

div#principal{
  height: 415px;
  background: url(<%= asset_path 'chat/fondo.png' %>) no-repeat;
}

div#player{
  height: 163px;
  background: #c3d2de;
}

div#emoticon{
  margin: 10px;
}

div#chat{
  height: 250px;;
  background-color:#ffffff;
  overflow:auto;
  border: 1px solid #808080;
  padding: 5px 10px;
}

div#mensaje input.texto{
  width: 270px; 
  border: 1px solid #808080;
}

.alinn{
padding-top: 5px;
}

div#mensaje button{
  height:40px;
  width:45px;
  padding-top: 0px;
  margin-top: 0px;
  background: url(<%= asset_path 'chat/enviar.png' %>) no-repeat;
}

div#contactos{
  background: white;
  opacity: .65;
  filter: alpha(opacity=65);
}


div#lista-contactos{
  background: #eeeeee;
}

div#lista-contactos ul{
  list-style-image: url(<%= asset_path 'chat/vinieta.png' %>)
}
